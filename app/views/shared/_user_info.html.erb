<div class="user_info">
  <a href="<%= user_path(current_user, params_link) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_name">
      <%= current_user.name %>
    </span>
    <span class="microposts">
      <%= current_user.microposts.count%> <%= t(:message, :count => current_user.microposts.count) %>
    </span>
  </a>
</div>