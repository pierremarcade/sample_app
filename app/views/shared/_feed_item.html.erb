<tr>
  <td class="gravatar">
    <%= link_to(gravatar_for(feed_item.user), user_path(feed_item.user, params_link)) %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_item.user.name, user_path(feed_item.user, params_link) %>
    </span>
    <span class="content"><%= feed_item.content %></span>
    <span class="timestamp">
      <%=  t(:posted_since) %> <%= time_ago_in_words(feed_item.created_at) %>.
    </span>
  </td>
  <% if current_user?(feed_item.user) %>
  <td>
    <%= link_to t(:delete), micropost_path(feed_item, params_link), :method => :delete,
                                     data: { :confirm => t(:delete_confirm)},
                                     :title => feed_item.content %>
  </td>
  <% end %>
</tr>