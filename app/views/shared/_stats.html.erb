<% @user ||= current_user %>
<div class="stats">
  <table summary="User stats">
    <tr>
      <td>
        <a href="<%= following_user_path(@user, params_link) %>">
          <span id="following" class="stat">
          <%= @user.following.count  %> <%= t(:following, :count => @user.following.count) %>
          </span>
        </a>
      </td>
      <td>
        <a href="<%= followers_user_path(@user,params_link) %>">
          <span id="followers" class="stat">
            <%= @user.followers.count %> <%= t(:follower, :count => @user.followers.count) %>
          </span>
        </a>
      </td>
    </tr>
  </table>
</div>