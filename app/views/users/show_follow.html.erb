<table summary="<%= t(:info_about_following_followers) %> ">
  <tr>
    <td class="main">
      <h1><%= @titre %></h1>

      <% unless @users.empty? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate @users %>
      <% end %>
    </td>
    <td class="sidebar round">
      <strong><%= t(:name) %> </strong> <%= @user.name %><br />
      <strong>url</strong> <%= link_to user_path(@user), @user %><br />
      <strong><%= t(:messages) %></strong> <%= @user.microposts.count %>
      <%= render 'shared/stats' %>
      <% unless @users.empty? %>
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, :size => 30), user_path(user, params_link) %>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>